<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
        crossorigin="anonymous"></script>
    <title>cart</title>
</head>

<body>
    <%- include("partials/navbar.ejs" , { user : user}) %>
        <div style="display: flex ; justify-content: flex-end;">
            <button style="margin: auto;"><a href="/home" style="text-decoration: none; color: black;">Back to
                    Home</a></button>
        </div>
        <br>
        <div class="container" id="container">
            <% if(cart.length > 0 ) { %>
                <div class="row col-sm">
                    <% for(let i=0 ; i < cart.length ; i++) { %>
                        <div class="col-sm-2 mb-3 d-flex align-items-stretch">
                            <div class="card">
                                <img class="card-img-top img-fluid" src="<%=cart[i].image %>"
                                    style=" width:50% ; height: 50%;" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=cart[i].name %>
                                    </h5>
                                    <p>
                                        Price - $<%=cart[i].price %>
                                    </p>
                                    <div style="justify-content: space-around;" id="<%=cart[i].id %>">
                                        <button class="plus">+</button>
                                        <button class="minus">-</button>
                                    </div>
                                    <p>Quantity : <%=cart[i].quantity %>
                                    </p>
                                    <div style="justify-content: space-around;">
                                        <button type="button" data-bs-toggle="modal"
                                            data-bs-target="#exampleModal<%=cart[i].id %>">View
                                            Details</button>
                                        <button type="button"><a href="/delete?id=<%=cart[i].id %>"
                                                style="text-decoration: none; color: black;">Delete</a></button>
                                    </div>
                                    <!-- popup -->
                                    <div class="modal fade" id="exampleModal<%=cart[i].id %>" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Details
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <img class="card-img-top img-fluid" src="<%=cart[i].image %>"
                                                        style=" width:50% ; height: 50%;" alt="Card image cap">
                                                    <h5 class="card-title">
                                                        <%=cart[i].name %>
                                                    </h5>
                                                    <p>
                                                        Price - $<%=cart[i].price %>
                                                    </p>
                                                    <p>
                                                        Description <br>
                                                        <%= cart[i].details %>
                                                    </p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>

                <% }else{ %>
                    <div>
                        <h3>
                            <%= msg %>
                        </h3>
                    </div>
                    <%} %>
        </div>

</body>
<script>
    let plus = document.querySelectorAll(".plus")
    let minus = document.querySelectorAll(".minus")

    plus.addEventListener("click", (event) => {
        let x = new XMLHttpRequest();
        console.log(event.target.parentNode.id);
        x.open("post", "/pluscart", true);
        x.setRequestHeader("Content-type", "application/json")
        x.send(JSON.stringify({ id: event.target.parentNode.id }))
    })
    minus.addEventListener("click", (event) => {
        console.log(event.target.parentNode.id);
        let x = new XMLHttpRequest();
        x.open("post", "/minuscart", true);
        x.setRequestHeader("Content-type", "application/json")
        x.send(JSON.stringify({ id: event.target.parentNode.id }))
    })
</script>


